{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block title %}Hello FenceCostController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {{ form(form) }}
        {% if costResponse != null %}
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th scope="col">Наименование</th>
                    <th scope="col">Кол-во</th>
                    <th scope="col">Ед. изм</th>
                    <th scope="col">Цена</th>
                    <th scope="col">Сумма</th>
                </tr>

                </thead>
                <tbody>
                <tr>
                    <td>Забор {{ costResponse['width'] }}мм. x {{ costResponse['height'] }}мм.</td>
                    <td>
                        {{ costResponse['width'] * costResponse['height'] }}
                    </td>
                    <td>м<sup>2</sup></td>
                    <td>1299 р.</td>
                    <td>{{ 1299 * (costResponse['width'] * costResponse['height'])}} р.</td>
                </tr>
                </tbody>
            </table>
        {% endif %}

    </div>
{% endblock %}
