<div class="modal modal-lg fade" tabindex="-1" id="exampleModalCaroulsel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Фотографии</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="carouselExampleControls" class="carousel slide col-auto" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        {% for i in product.images %}
                            {% if i == product.images|first %}
                                <div class="carousel-item active">
                                    <img class="d-block w-100 img-fluid" src="{{ asset('uploads/'~i) }}" alt="First slide">
                                </div>
                            {% else %}
                                <div class="carousel-item">
                                    <img class="d-block w-100 img-fluid" src="{{ asset('uploads/'~i) }}" alt="Second slide">
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>

                    {% if product.images|length != 1 %}
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function launchModalCaroulsel() {
        let orderModal = new bootstrap.Modal(document.getElementById('exampleModalCaroulsel'), {
        })
        orderModal.toggle();
    }
</script>