<script>
    $(document).ready(function () {
        $("#myTab a").click(function (e) {
            e.preventDefault();
            $(this).tab("show");
        });
    });
</script>
<div class="m-4">
    <ul class="nav nav-pills" id="myTab">
        <li class="nav-item">
            <a href="#new" class="nav-link active">Новые</a>
        </li>
        <li class="nav-item">
            <a href="#read" class="nav-link">Прочитанные</a>
        </li>

    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="new">
            <h4 class="mt-2">Новые заявки</h4>
            <div class="row">
                {% for new in newOrders|reverse %}
                    <div class="col-auto mb-4">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="text-secondary">Имя:</span> {{ new.firstName }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Телефон:</span> <a href="{{ 'tel:'~new.phone }}">{{ new.phone }}</a>
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Почта:</span> {{ new.email }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Текст:</span> {{ new.text }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Вызван действием:</span> {{ new.actionText }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Время:</span> {{ new.createdAt|date('H:i:s d.m.y') }}
                            </li>
                            <li class="list-group-item text-center">
                                <a class="col-11 btn btn-success"
                                   href="{{ path('app_admin_orders_read', { id: new.id }) }}">
                                    Прочитано
                                </a>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="read">
            <h4 class="mt-2">Прочитанные заявки</h4>
            <div class="row">
                {% for read in readOrders|reverse %}
                    <div class="col-auto mb-4">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="text-secondary">Имя:</span> {{ read.firstName }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Телефон:</span> <a href="{{ 'tel:'~read.phone }}">{{ read.phone }}</a>
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Почта:</span> {{ read.email }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Текст:</span> {{ read.text }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Вызван действием:</span> {{ read.actionText }}
                            </li>
                            <li class="list-group-item">
                                <span class="text-secondary">Время:</span> {{ read.createdAt|date('H:i:s d.m.y') }}
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>


        </div>
    </div>
</div>