<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <meta name="description" content="{{ description }}">
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<button class="btn" id="sidebarBtn" onclick="openSidebar();" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling"
        aria-controls="offcanvasScrolling"><i class="bi bi-list fs-1"></i></button>

<div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1"
     id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
    <div class="offcanvas-header bg-primary">
        <h5 class="offcanvas-title text-white">Меню администратора</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="list-group ">
            <li class="list-group-item list-group-item-action"
                onclick="window.location = '{{ path('app_admin_seo') }}'">
                SEO
            </li>
        </ul>
    </div>
</div>

<div id="body" class="container-fluid">
    {% block body %}
    {% endblock %}
</div>
<script>
    let sidebarBool = false;
    function openSidebar() {
        sidebarBool = !sidebarBool;
        if (sidebarBool) {
           //$("#sidebarBtn").addClass("btn-success");
        } else {

        }
        sidebarBool = !sidebarBool;
    }
</script>

</body>
</html>
